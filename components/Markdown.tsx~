"use client";

import ReactMarkdown from "react-markdown";

export default function Markdown({ children }: { children: string }) {
  return (
    <div className="prose prose-lg max-w-none prose-headings:font-semibold prose-p:text-[#333] prose-li:text-[#333] prose-a:text-[#5E8164] hover:prose-a:underline">
      <ReactMarkdown>{children}</ReactMarkdown>
    </div>
  );
}
